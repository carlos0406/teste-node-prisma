{
    "env": {
        "es2021": true,
        "node": true,
        "jest":true
    },
    "extends": [
        "standard",
        "prettier",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "space-before-function-paren": "off",
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "camelcase": "off"
    }
}
